<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="@dimen/_10sdp"
    android:scrollbars="none"
    tools:context=".chatActivities.chatHomeView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <FrameLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_1sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userIcon2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/background_icon_common"
                android:scaleType="centerCrop"
                android:translationX="50dp" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userIcon3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/background_icon_common"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userProfileImage"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/background_image_user"
                android:foreground="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/background_input"
                android:scaleType="centerCrop" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/searchBarIcon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:gravity="left|center_vertical"
                android:foreground="@android:drawable/ic_menu_search"
                />

            <TextView
                android:id="@+id/searchBarText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="search"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/secondary_text"
                android:paddingLeft="@dimen/_30sdp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_70sdp">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                android:foreground="@android:drawable/ic_input_add" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:adjustViewBounds="false"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar"
                android:translationX="@dimen/_60sdp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar"
                android:translationX="@dimen/_120sdp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar"
                android:translationX="@dimen/_180sdp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar"
                android:translationX="@dimen/_240sdp" />


        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_140sdp"
            >

            <TextView
                android:id="@+id/recentMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/recent_messages"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatUser0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_160sdp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Greta Lewis"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Do you have time"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="right|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 min"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatUser1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_220sdp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Greta Lewis"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Do you have time"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="right|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45 min"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatUser2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_280sdp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/background_image"
                android:foreground="@android:drawable/ic_menu_my_calendar" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Greta Lewis"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hello Do you have time"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_gravity="right|center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 hour"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
        </FrameLayout>


    </RelativeLayout>


</ScrollView>